@model IEnumerable<CRUD_App_2.Models.StoreViewModel>

@{
    ViewBag.Title = "Store Details";
}

<h2 id="Header">@ViewBag.Title</h2>

<p>
    <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#newStore" id="add">Add Store</button>
</p>

<!--Modal-->
<div id="newStore" class="modal form-horizontal" tabindex="-1" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="Store">Store</h4>
            </div>
            <div class="modal-body" id="myModalBodyDiv">
                <form class="form-horizontal va-form" id="storeDetailsForm" name="storeDetails">
                    <input type="hidden" name="hdnField" id="hdnField" value="" />
                    @*<fieldset>*@
                    @*<legend>Legend</legend>*@
                    <div class="form-group">
                        <label for="storeName">Name</label>
                        <input name="name" class="form-control col-xs-10" id="storeInputName" aria-describedby="nameHelp" placeholder="Enter name" type="text">
                        <small id="nameHelp" class="form-text text-muted"></small>
                    </div>
                    <div class="form-group">
                        <label for="storerAddres">Address</label>
                        <input name="address" class="form-control" id="storeInputAddress" aria-describedby="addressHelp" placeholder="Enter address" type="text">
                        <small id="addressHelp" class="form-text text-muted"></small>
                    </div>
                    @*</fieldset>*@

                    <div class="modal-footer">                        
                        <button id="submit" type="submit" class="btn btn- primary">Temp</button>
                        <a class="btn btn-default" data-dismiss="modal">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            Action
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            <button type="button" class="btn btn-warning btn-sm" id="edit" onclick="setId('@(item.Id)')"> Edit</button> |
            <button type="button" class="btn btn-info btn-sm" id="detail" onclick="setId('@(item.Id)')"> Details</button> |
            <button type="button" class="btn btn-danger btn-sm" id="delete" onclick="setId('@(item.Id)')"> Delete</button>
        </td>
    </tr>
}

</table>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/utility.js"></script>
<script src="~/Scripts/store.js"></script>
