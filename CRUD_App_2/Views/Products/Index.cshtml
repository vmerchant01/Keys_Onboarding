@model IEnumerable<CRUD_App_2.Models.ProductViewModel>

@{
    ViewBag.Title = "Product Details";
}

<h2>@ViewBag.Title</h2>

<p>
    <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#newProduct" id="add">Add Product</button>
</p>

<!--Modal-->
<div id="newProduct" class="modal form-horizontal" tabindex="-1" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="Product">Product</h4>
            </div>
            <div class="modal-body" id="myModalBodyDiv">
                <form class="form-horizontal va-form" id="productDetailsForm" name="productDetails">
                    <input type="hidden" name="hdnField" id="hdnField" value="" />
                    @*<fieldset>*@
                    @*<legend>Legend</legend>*@
                    <div class="form-group">
                        <label for="productName">Name</label>
                        <input name="name" class="form-control col-xs-10" id="productInputName" aria-describedby="nameHelp" placeholder="Enter name" type="text">
                        <small id="nameHelp" class="form-text text-muted"></small>
                    </div>
                    <div class="form-group">
                        <label for="productPrice">Price</label>
                        <input name="price" class="form-control" id="productInputPrice" aria-describedby="priceHelp" placeholder="Enter price" type="text">
                        <small id="priceHelp" class="form-text text-muted"></small>
                    </div>
                    @*</fieldset>*@

                    <div class="modal-footer">
                        <button id="submit" type="submit" class="btn btn-primary">Temp</button>
                        <a class="btn btn-default" data-dismiss="modal">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Action
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            <button type="button" class="btn btn-warning btn-sm" id="edit" onclick="setId('@(item.Id)')"> Edit</button> |
            <button type="button" class="btn btn-info btn-sm" id="detail" onclick="setId('@(item.Id)')"> Details</button> |
            <button type="button" class="btn btn-danger btn-sm" id="delete" onclick="setId('@(item.Id)')"> Delete</button>
        </td>
    </tr>
}

</table>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/utility.js"></script>
<script src="~/Scripts/product.js"></script>